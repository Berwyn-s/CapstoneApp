<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapstoneApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_900</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/dark_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/dark_chocolate</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CapstoneApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CapstoneApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CapstoneApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="themeTab">
        <item name="backgroundColor">@color/black_grey</item>
    </style>

    <style name="textOnPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="CollapsedCollapsingLayoutTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>